  "dependencies": {
    "@crl/config": "1.0.0",
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.0.6",
    "@nestjs/core": "^7.0.6",
    "@nestjs/graphql": "^7.1.1",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^7.0.6",
    "@nestjs/serve-static": "^2.1.0",
    "@sendgrid/mail": "^7.1.1",
    "apollo-server-express": "^2.9.5",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "ejs": "^3.0.2",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.5",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.3",
    "nodemailer": "^6.4.8",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "shortid": "^2.2.15"
